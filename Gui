import tkinter as tk
from PIL import Image, ImageTk
from tkinter import *;
mainWin = Tk()
mainWin.title("Program functionality")
mainWin.title("Plants or Animal Identifier");
mainWin.geometry("600x700");
myApp = Frame(mainWin);
myApp.grid();
lab = Label(myApp, text = "Hello!, this is a label.");
lab.grid();
mainWin.mainloop();

top = Tk()  
top.geometry("200x100")  
b = Button(top,text = "Simple")  
b.pack()  
top.mainaloop()  

